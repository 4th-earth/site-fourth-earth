{
    "name": "joshbruce/fourth-earth",
    "version": "0.0.2",
    "type": "project",
    "description": "Future-fantasy, text-based RPG.",
    "require": {
        "php": "^7.3",
        "8fold/laravel-markup": "~0.0.39",
        "joshbruce/php-dice-bag": "~1.0",
        "hashids/hashids": "~4.0",
        "zacksmash/fortify-ui": "~1.3",
        "livewire/livewire": "~2.3",
        "doctrine/dbal": "~2.12"
    },
    "require-dev": {
        "facade/ignition": "^2.3.6",
        "fzaninotto/faker": "^1.9.1",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/collision": "^5.0",
        "phpunit/phpunit": "^9.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
          "FourthEarth\\Site\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FourthEarth\\Site\\Tests\\": "./tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "FourthEarth\\Site\\Provider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
